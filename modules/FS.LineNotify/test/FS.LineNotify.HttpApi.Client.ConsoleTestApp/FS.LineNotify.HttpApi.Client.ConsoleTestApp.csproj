<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <RootNamespace>FS.LineNotify</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Volo.Abp.EventBus.RabbitMQ" Version="4.2.0" />
    <PackageReference Include="Volo.Abp.Http.Client.IdentityModel" Version="4.2.0" />
    <ProjectReference Include="..\..\src\FS.LineNotify.HttpApi.Client\FS.LineNotify.HttpApi.Client.csproj" />
    <ProjectReference Include="..\..\src\FS.LineNotify.Webhook.Client\FS.LineNotify.Webhook.Client.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="appsettings.json" />
    <Content Include="appsettings.json">
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="5.0.*" />
  </ItemGroup>

</Project>
