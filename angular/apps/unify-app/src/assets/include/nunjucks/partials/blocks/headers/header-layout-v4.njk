<!-- Header -->
<header id="js-header" class="u-header u-header--static u-header--show-hide u-header--change-appearance u-header--has-hidden-element"
        data-header-fix-moment="500"
        data-header-fix-effect="slide">
  <!-- Top Bar -->
  <div class="u-header__section u-header__section--light g-bg-white g-color-main g-brd-bottom g-brd-gray-light-v4 g-py-10">
    <div class="container">
      <div class="row flex-column flex-md-row justify-content-between align-items-center text-center g-font-size-13">
        <div class="col-auto col-lg-6 text-lg-left">
          <ul class="d-inline-block list-inline g-valign-middle mb-0">
            <li class="list-inline-item g-mr-20--lg">
              <i class="icon-envelope g-mt-1 g-mr-5"></i>
              Email:
              <a class="g-color-main g-color-primary--hover g-text-underline--none--hover" href="mailto:#">info@htmlstream.com</a>
            </li>
            <li class="list-inline-item g-mr-20--lg">
              <i class="icon-call-in g-mt-1 g-mr-5"></i>
              Hotline:
              <a class="g-color-main g-color-primary--hover g-text-underline--none--hover" href="tel:#">(1) 396 4587 99</a>
            </li>
          </ul>
        </div>

        <div class="col-auto col-lg-6 text-lg-right">
          <ul class="d-inline-block list-inline g-valign-middle mb-0">
            <li class="list-inline-item">
              <a class="g-color-main g-color-primary--hover g-text-underline--none--hover g-pa-5" href="#">
                <i class="icon-home"></i>
              </a>
            </li>
            <li class="list-inline-item">
              <a class="g-color-main g-color-primary--hover g-text-underline--none--hover g-pa-5" href="#">
                <i class="icon-globe"></i>
              </a>
            </li>
            <li class="list-inline-item">
              <a class="g-color-main g-color-primary--hover g-text-underline--none--hover g-pa-5" href="#">
                <i class="icon-basket"></i>
              </a>
            </li>
            <li class="list-inline-item">
              <a class="g-color-main g-color-primary--hover g-text-underline--none--hover g-pa-5" href="#">Quicklinks</a>
            </li>
            <li class="list-inline-item">
              <a class="g-color-main g-color-primary--hover g-text-underline--none--hover g-pa-5" href="#">My Account</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!-- End Top Bar -->

  <div class="text-center text-lg-left u-header__section u-header__section--light u-header--hidden-element g-bg-white g-brd-bottom g-brd-gray-light-v4 g-py-20">
    <div class="container">
      <div class="row flex-lg-row align-items-center justify-content-lg-start">
        <div class="col-lg-2">
          <!-- Logo -->
          <a href="{{ root }}index.html" class="navbar-brand">
            <img src="{{ root }}assets/img/logo/logo-1.png" alt="Image Description">
          </a>
          <!-- End Logo -->
        </div>

        <div class="g-hidden-md-down col-lg-10">
          <a href="#">
            <img class="w-100" src="{{ root }}assets/img-temp/945x100/img1.jpg" alt="Image Description">
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="u-header__section u-header__section--light g-bg-white"
       data-header-fix-moment-classes="u-shadow-v18">
    <nav class="navbar navbar-expand-lg py-0">
      <div class="container">
        <!-- Responsive Toggle Button -->
        <button class="navbar-toggler navbar-toggler-right btn g-line-height-1 g-brd-none g-pa-0" type="button" aria-label="Toggle navigation" aria-expanded="false" aria-controls="navBar"
                data-toggle="collapse"
                data-target="#navBar">
          <span class="hamburger hamburger--slider">
            <span class="hamburger-box">
              <span class="hamburger-inner"></span>
            </span>
          </span>
        </button>
        <!-- End Responsive Toggle Button -->

        <!-- Navigation -->
        <div class="collapse navbar-collapse align-items-center text-center flex-sm-row g-pt-10 g-pt-0--lg g-mr-40--lg" id="navBar">
          <ul class="navbar-nav text-uppercase g-font-weight-600 mr-auto">
            <li class="nav-item g-pr-40--lg{% if mainNavActive_1 == 'home' %} active{% endif %}">
              <a href="#" class="nav-link g-py-15 g-px-0--lg">Home
                {% if mainNavActive_1 == 'home' %}<span class="sr-only">(current)</span>{% endif %}
              </a>
            </li>
            <li class="nav-item g-pr-40--lg{% if mainNavActive_1 == 'pages' %} active{% endif %}">
              <a href="#" class="nav-link g-py-15 g-px-0--lg">Pages
                {% if mainNavActive_1 == 'pages' %}<span class="sr-only">(current)</span>{% endif %}
              </a>
            </li>
            <li class="nav-item g-pr-40--lg{% if mainNavActive_1 == 'blog' %} active{% endif %}">
              <a href="#" class="nav-link g-py-15 g-px-0--lg">Blog
                {% if mainNavActive_1 == 'blog' %}<span class="sr-only">(current)</span>{% endif %}
              </a>
            </li>
            <li class="nav-item g-pr-40--lg{% if mainNavActive_1 == 'portfolio' %} active{% endif %}">
              <a href="#" class="nav-link g-py-15 g-px-0--lg">Portfolio
                {% if mainNavActive_1 == 'portfolio' %}<span class="sr-only">(current)</span>{% endif %}
              </a>
            </li>
            <li class="nav-item g-pr-40--lg{% if mainNavActive_1 == 'features' %} active{% endif %}">
              <a href="#" class="nav-link g-py-15 g-px-0--lg">Features
                {% if mainNavActive_1 == 'features' %}<span class="sr-only">(current)</span>{% endif %}
              </a>
            </li>
            <li class="nav-item g-pr-40--lg{% if mainNavActive_1 == 'shortcodes' %} active{% endif %}">
              <a href="#" class="nav-link g-py-15 g-px-0--lg">Shortcodes
                {% if mainNavActive_1 == 'shortcodes' %}<span class="sr-only">(current)</span>{% endif %}
              </a>
            </li>
            <li class="nav-item g-pr-40--lg{% if mainNavActive_1 == 'demos' %} active{% endif %}">
              <a href="#" class="nav-link g-py-15 g-px-0--lg">Demos
                {% if mainNavActive_1 == 'demos' %}<span class="sr-only">(current)</span>{% endif %}
              </a>
            </li>
          </ul>
        </div>
        <!-- End Navigation -->

        <!-- Search -->
        <div class="d-inline-block g-pos-abs g-top-15 g-right-0 g-valign-middle">
          <a href="#" class="g-font-size-18 g-color-gray-dark-v5 g-text-underline--none--hover"
             aria-haspopup="true"
             aria-expanded="false"
             aria-controls="searchform-1"
             data-dropdown-target="#searchform-1"
             data-dropdown-type="css-animation"
             data-dropdown-duration="300"
             data-dropdown-animation-in="fadeInUp"
             data-dropdown-animation-out="fadeOutDown">
            <i class="icon-magnifier"></i>
          </a>

          <!-- Search Form -->
          <form id="searchform-1" class="u-searchform-v1 u-dropdown--css-animation u-dropdown--hidden g-bg-white g-pa-10 g-mt-10--lg">
            <div class="input-group g-brd-primary--focus">
              <input class="form-control rounded-0 u-form-control" type="search" placeholder="Enter Your Search Here...">

              <div class="input-group-addon p-0">
                <button class="btn rounded-0 btn-primary btn-md g-font-size-14 g-px-18" type="submit">Go</button>
              </div>
            </div>
          </form>
          <!-- End Search Form -->
        </div>
        <!-- End Search -->
      </div>
    </nav>
  </div>
</header>
<!-- End Header -->
