@using Volo.Abp.LeptonTheme.Demo.Navigation
@using Volo.Abp.LeptonTheme.Demo.Pages.Layouts.Application
@using Volo.Abp.LeptonTheme.Demo.Pages.Layouts.Application.Forms.Controls
@using System.Globalization
@model Volo.Abp.LeptonTheme.Demo.Pages.Layouts.Application.Forms.Controls.BaseInputsModel
@inject IHtmlLocalizer<DemoResource> L
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["BaseInputs"].Value;
    PageLayout.Content.BreadCrumb.Items.Add(new BreadCrumbItem(L["Forms"].Value));
    PageLayout.Content.BreadCrumb.Items.Add(new BreadCrumbItem(L["Controls"].Value));
    PageLayout.Content.MenuItemName = DemoMenu.Forms.Controls.BaseInputs;
}
@section content_toolbar {
    <abp-button button-type="Primary">Primary</abp-button>
    <abp-button button-type="Secondary">Secondary</abp-button>
    <abp-button button-type="Success">Success</abp-button>
}
@section scripts {
    <script>
        jQuery(document).ready(function () {
            $(".datepicker").datepicker({
                autoclose: true,
                language: abp.localization.currentCulture.cultureName
            });
            var $dateRangePicker = $('#DashboardFilterForm .input-daterange');
            $dateRangePicker.datepicker({
                autoclose: true,
                language: abp.localization.currentCulture.cultureName
            });
        });
    </script>
}
