@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Volo.Abp.AspNetCore.Mvc.UI.Theme.Lepton.Views.Error.DefaultErrorComponent
@using Volo.Abp.AspNetCore.Mvc.UI.Theme.Shared.Views.Error
@using Volo.Abp.Http
@using Volo.Abp.LeptonTheme.Demo.Localization.Resource
@using Volo.Abp.LeptonTheme.Demo.Navigation
@model Volo.Abp.LeptonTheme.Demo.Pages.Layouts.Application.CustomPages.ErrorPage500Model
@inject IHtmlLocalizer<DemoResource> L
@inject IPageLayout PageLayout
@{
    PageLayout.Content.Title = L["ErrorPage500"].Value;
    PageLayout.Content.BreadCrumb.Items.Add(new BreadCrumbItem(L["CustomPages"].Value));
    PageLayout.Content.BreadCrumb.Items.Add(new BreadCrumbItem(L["ErrorPages"].Value));
    PageLayout.Content.MenuItemName = DemoMenu.CustomPages.ErrorPages.ErrorPage500; 
}
 
@(await Component.InvokeAsync<LeptonErrorViewComponent>(new
    {
        model = new AbpErrorViewModel{
            ErrorInfo = new RemoteServiceErrorInfo(@L["ServerError"].Value, @L["500Description"].Value, "500"), 
            HttpStatusCode = 500
            },
        defaultErrorMessageKey = "500Message"
    }))
