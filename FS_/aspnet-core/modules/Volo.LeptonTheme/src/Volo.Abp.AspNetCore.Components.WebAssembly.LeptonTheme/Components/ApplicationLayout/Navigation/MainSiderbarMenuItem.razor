@using Volo.Abp.LeptonTheme.Management
@if (MenuItem.MenuItem.IsLeaf)
{
    <li class="@(MenuItem.IsActive ? "current" : "")">
        <a href="@MenuItem.MenuItem.Url" @onclick:preventDefault @onclick="@NagivateAsync">
            <span class="lp-icon">
                <i class="@(MenuItem.MenuItem.Icon ?? "")"></i>
            </span>
            <span class="lp-text">
                @MenuItem.MenuItem.DisplayName
            </span>
        </a>
    </li>
}
else
{
    <li class="@(MenuItem.IsActive ? "current" : "") has-drop">
        <a href="#" @onclick:preventDefault @onclick="ToggleMenu">
            <span class="lp-icon">
                <i class="@(MenuItem.MenuItem.Icon ?? "")"></i>
            </span>
            <span class="lp-text">
                @MenuItem.MenuItem.DisplayName
            </span>
            <span class="lp-arrow-icon" for="@MenuItem.MenuItem.ElementId">
                <i class="fa fa-chevron-down"></i>
            </span>
        </a>
        <ul id="@MenuItem.MenuItem.ElementId" style="display:@(MenuItem.IsOpen || MenuItem.IsActive ? "block" : "none")">
            @foreach (var childMenuItem in MenuItem.Items)
            {
                <MainSiderbarMenuItem Menu="@Menu" MenuItem="@childMenuItem"/>
            }
        </ul>
    </li>
}
