{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fs/theme.ng-alain": [
        "libs/theme-ng-alain/src/index.ts"
      ],
      "@fs/theme.ng-alain/*": [
        "libs/theme-ng-alain/*/src/index.ts"
      ],
      "@fs/theme.ng-alain-ms": [
        "libs/theme-ng-alain-ms/src/index.ts"
      ],
      "@fs/theme.ng-alain-ms/*": [
        "libs/theme-ng-alain-ms/*/src/index.ts"
      ],
      "@fs/theme.the-project": [
        "libs/theme-the-project/src/index.ts"
      ],
      "@fs/theme.the-project/*": [
        "libs/theme-the-project/*/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
